= semantic_form_for [:admin, @repository] do |f|
  = f.inputs I18n.t('dmp.admin.details') do
    = f.input :organisation
    = f.input :name
    = f.input :sword_col_uri
    = f.input :username
    = f.input :password
    = f.input :administrator_name
    = f.input :administrator_email
    = f.input :create_metadata_with_new_plan, :label => t('repository.label.create_metadata_with_new_plan')
  = f.inputs I18n.t('repository.title.filetypes') do
    = f.input :deposit_pdf, :label=> I18n.t('repository.filetype.pdf')
    = f.input :deposit_html, :label=> I18n.t('repository.filetype.html')
    = f.input :deposit_csv, :label=> I18n.t('repository.filetype.csv')
    = f.input :deposit_txt, :label=> I18n.t('repository.filetype.txt')
    = f.input :deposit_xml, :label=> I18n.t('repository.filetype.xml')
    = f.input :deposit_xlsx, :label=> I18n.t('repository.filetype.xlsx')
    = f.input :deposit_docx, :label=> I18n.t('repository.filetype.docx')
    = f.input :deposit_rtf, :label=> I18n.t('repository.filetype.rtf')
  = f.buttons do
    = f.action :submit
    = f.action :cancel, :wrapper_html=>{:class=>"cancel"}, :label => "Cancel"
