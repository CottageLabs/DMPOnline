- title t('dmp.auth.change_pass')
- error_notices devise_error_messages!

= semantic_form_for :user, :url => password_path(resource_name), :html => { :method => :put } do |f|  
  = f.hidden_field :reset_password_token

  = f.inputs do
    = f.input :password, :label => t('dmp.auth.new_pass')
    = f.input :password_confirmation, :label => t('dmp.auth.confirm_pass')

  = f.buttons do
    = f.commit_button t('dmp.auth.change_pass')

= render :partial => "devise/shared/links" 
