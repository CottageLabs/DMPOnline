- title t('dmp.auth.edit_user')
- error_notices devise_error_messages!
  
= semantic_form_for :user, :url => registration_path(:user), :html => { :method => :put } do |f|

  = f.inputs do
    = f.input :email
    = f.input :password, :label => t('dmp.auth.new_pass'), :hint => t('dmp.auth.blank_password')
    = f.input :password_confirmation, :label => t('dmp.auth.confirm_pass')

  = f.buttons do
    = f.commit_button t('dmp.auth.update_user')

%h3= t('dmp.auth.del_reg') 

%p
  = "#{t('dmp.auth.unhappy')} 
  = link_to t('dmp.auth.del_reg'), registration_path(:user), :confirm => t('dmp.auth.sure'), :method => :delete

.cancel_link= link_to t('dmp.go_back'), :back
